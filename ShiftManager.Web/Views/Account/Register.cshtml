@model ShiftManager.Web.Data.Entities.Affiliate
@using ShiftManager.Web.Models.Enums

@{
ViewData["Title"] = "Register Affiliate";
}

<h2 class="text-center mb-4">Register New Affiliate</h2>

<form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" required />
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="DocumentType" class="form-label">Identification Type</label>
        <select asp-for="DocumentType" class="form-select"
                asp-items="Html.GetEnumSelectList<ShiftManager.Web.Models.Enums.DocumentType>()">
            <option value="">-- Select --</option>
        </select>
        <span asp-validation-for="DocumentType" class="text-danger"></span>
    </div>


    <div class="row mt-3">
        <div class="col-md-6">
            <label asp-for="Identification" class="form-label"></label>
            <input asp-for="Identification" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" required />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" required />
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <label asp-for="BirthDate" class="form-label"></label>
            <input asp-for="BirthDate" type="date" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" required />
        </div>
    </div>
    
    <div class="form-group mt-3">
        <label class="form-label">Photo</label>
        <input type="file" name="Photo" class="form-control" accept="image/*" required />
    </div>

    <button type="submit" class="btn btn-success mt-4">Register</button>
</form>
