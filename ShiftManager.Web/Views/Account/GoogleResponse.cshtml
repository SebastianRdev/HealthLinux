@{
    ViewData["Title"] = "Bienvenido";
    var nombre = User.Identity?.Name ?? "usuario"; // obtiene el nombre de Google
}

<div class="container text-center mt-5">
    <h2>✅ Inicio de sesión exitoso</h2>
    <p>Has iniciado sesión con tu cuenta de Google, <strong>@nombre</strong>.</p>

    <a href="/logout" class="btn btn-danger mt-3">Cerrar sesión</a>
</div>